<div class="jumbotron" style="margin-top: 72px">
    <div class="container projectBorder">
        <div class="row">
            <div class="col-md-10 align-text-bottom">
                <h2 class="m-0" id="h2"><u>Homepage - All Blog Posts</u></h2>
                <p style="display: none" id="blog_id">{{blog.id}}</p>
            </div>
            <div class="d-flex col-md-2 align-items-end justify-content-end">
                <button class="btn1" id="newComment" style="margin-right: 5px">+ Add New Comment</button>
            </div>
        </div>

        <div class="row projectDivider2" style="margin-top: 20px" id="blogListener">
            <a href="/blog/{{blog.id}}" style="padding: 5px">
                <article class="col-md-12 projectHeaders2" style="height: fit-content; margin-top: 10px;">
                    <div class="row" style="margin: auto">
                        <section class="col-md-1 projectContent2">
                            <p class="align-middle text-center" style="margin 5px"><strong>Id #: </strong> {{blog.id}}
                            </p>
                        </section>
                        <section class="col-md-7 projectContent2">
                            <p class="align-middle text-center" style="margin 5px"><strong>Title: </strong>
                                {{blog.title}}</p>
                        </section>
                        <section class="col-md-2 projectContent2">
                            <p class="align-middle text-center" style="margin 5px"><strong>Posted By: </strong> username
                            </p>
                        </section>
                        <section class="col-md-2 projectContent2">
                            <p class="align-middle text-center" style="margin 5px"><strong>Date Created: </strong>
                                {{blog.date_created}}</p>
                        </section>
                    </div>
                    <div class="row" style="margin: auto">
                        <section class="d-flex col-md-12 projectContent2" value={{blog.id}}>
                            <p class="text-align-bottom text-center" style="margin 5px"><strong>Content:
                                </strong>{{blog.contents}}</p>
                        </section>
                </article>
                </section>
            </a>
        </div>

        <form style="display: none" id="form">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Enter Your Comment Below</label>
                <textarea class="form-control" id="comment" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" style="margin: 5px" id="sBtn">Submit</button>
        </form>

        <div class="row projectDivider2" style="margin-top: 20px" id="blogListener">
            {{#each blog.comments as |comment|}}
            <div class="col-md-2">
                <p>{{comment.user.username}}</p>
                <p>{{comment.date_created}}</p>
            </div>
            <div class="col-md-9">
                <p>{{comment.comment}}</p>
            </div>
            <a class="col-md-1">Edit</a>
            {{/each}}
        </div>
    </div>
</div>

